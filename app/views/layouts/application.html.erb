<!DOCTYPE html>
<html>
  <head>
    <title>GoalApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% if current_user %>
      <%= current_user.username %>
      <%= button_to 'Sign Out', session_url, method: :delete %>
      <% else %>
        <%= button_to 'Log In', new_session_url %>
    <% end %>
    <%= yield %>
  </body>
</html>
